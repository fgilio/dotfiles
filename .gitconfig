# Inspiration from https://blog.gitbutler.com/how-git-core-devs-configure-git/
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[user]
	name = Franco Gilio
	email = franco.gilio@gmail.com
[column]
        ui = auto
[branch]
        sort = -committerdate
[tag]
        sort = version:refname
[init]
        defaultBranch = main
[diff]
        algorithm = histogram
        colorMoved = plain
        mnemonicPrefix = true
        renames = true
[push]
        default = simple
        autoSetupRemote = true
        followTags = true
[pull]
    rebase = true
[fetch]
        prune = true
        pruneTags = true
        all = true
[help]
        autocorrect = prompt
[commit]
        verbose = true
[rerere]
        enabled = true
        autoupdate = true
[core]
	excludesfile = /Users/fgilio/.dotfiles/.gitignore_global
[rebase]
        autoSquash = true
        autoStash = true
        updateRefs = true
[merge]
    conflictstyle = zdiff3
