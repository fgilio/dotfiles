#!/usr/bin/env zsh
# Codex wrapper - works in any shell context

if [ $# -eq 0 ]; then
    # Interactive: high reasoning for deeper exploration
    exec codex --enable web_search_request --dangerously-bypass-approvals-and-sandbox --model gpt-5.2 --config model_reasoning_effort="high"
else
    # Non-interactive: medium reasoning for faster responses
    exec codex --enable web_search_request --dangerously-bypass-approvals-and-sandbox --model gpt-5.2 --config model_reasoning_effort="medium" exec --skip-git-repo-check "$@"
fi