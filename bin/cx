#!/usr/bin/env zsh
# Codex wrapper - works in any shell context
# Sandbox config in ~/.codex/config.toml (sandbox_mode = "danger-full-access")

if [ $# -eq 0 ]; then
    # Interactive: high reasoning for deeper exploration
    exec codex --search --dangerously-bypass-approvals-and-sandbox --model gpt-5.3-codex --config model_reasoning_effort="high"
else
    # Non-interactive: medium reasoning for faster responses
    exec codex --search --dangerously-bypass-approvals-and-sandbox --model gpt-5.3-codex --config model_reasoning_effort="medium" exec --skip-git-repo-check "$@"
fi
