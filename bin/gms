#!/usr/bin/env zsh
# Gemini CLI wrapper - secure mode (prompts for approval)

if [ $# -eq 0 ]; then
    # Interactive: Gemini 3 Pro
    exec gemini -m gemini-3-pro-preview
else
    # Non-interactive/headless: Gemini 3 Flash
    # -p enables headless mode with tool execution
    exec gemini -m gemini-3-flash-preview -p "$@"
fi
