# Ghostty Configuration

auto-update-channel = tip

# Theme (auto-switches with macOS appearance)
# theme = light:GitHub Light Default,dark:GitHub Dark
theme = GitHub Dark

# Font
font-family = "JetBrains Mono"
font-size = 16
font-feature = -calt

adjust-cell-height = 15%

# Shell integration
shell-integration = zsh
shell-integration-features = cursor,sudo,title

# Cursor
cursor-style = bar
cursor-style-blink = true
cursor-click-to-move = false

# Mouse
selection-invert-fg-bg = true
mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

# Clipboard
copy-on-select = clipboard
clipboard-paste-protection = true
clipboard-trim-trailing-spaces = true

# Splits
unfocused-split-opacity = 0.7
split-divider-color = #edecee

# Window
window-padding-balance = true
window-padding-x = 20
window-padding-y = 10
window-save-state = always
macos-titlebar-style = native

# Keybindings
keybind = shift+enter=text:\x1b\r
keybind = ctrl+alt+cmd+shift+1=set_font_size:13
keybind = ctrl+alt+cmd+shift+2=set_font_size:16

# macOS-style line editing (readline translations)
keybind = super+backspace=text:\x15
keybind = alt+backspace=text:\x17
keybind = ctrl+backspace=text:\x1bd
